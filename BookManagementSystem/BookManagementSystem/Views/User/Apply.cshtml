@model Borrow

@{
    ViewData["Title"] = "Apply";
}
<link href="~/css/StyleSheet.css" rel="stylesheet" type="text/css" />

<h1 style="margin-bottom:50px;">書籍貸出申請</h1>


<table border="1" align="center" style="background-color:#CCD1D1; text-align:center">
    <tr>
        <th width="180" height="50">項目</th>
        <th width="300">書籍情報</th>
    </tr>
    @foreach (var book in Model.BookList)
    {

        <tr>
            <td height="80">書籍名</td>
            <td height="80" style="background-color:white">@book.nm_book</td>
        </tr>
        <tr>
            <td height="80">出版社</td>
            <td height="80" style="background-color:white">@book.publisher</td>
        </tr>
        <tr>
            <td height="80">特記事項</td>
            <td height="80" style="background-color:white">@book.note</td>
        </tr>
    }
</table>

<form style="margin-bottom:50px" asp-controller="User" asp-action="Apply">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group" style="margin:20px auto; text-align:center">
        <label>貸出日：</label>
        <input type="date" asp-for="@Model.date_borrow" value="@DateTime.Now.ToShortDateString()"/>
    </div>
    <div class="form-group" style="margin:20px auto; text-align:center">
        <label>返却日：</label>
        <input type="date" asp-for="@Model.date" />
    </div>
    <div class="form-group" style=" margin: 1em auto 2em; text-align:center">
        <input style="margin-right:30%" type="submit" value="申請" />
        <a href="~/Home/SelectBook"><input type="button" value="戻る" /></a>
    </div>

</form>




